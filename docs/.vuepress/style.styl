
$navbarHeight = 3.6rem
th, td {
  border: 1px solid #f2f2f2;
  padding: 0.6em 1em;
}

// sidebar 拆分成左右结构
.sidebar
  .sidebar-heading
    display flex
    justify-content space-between
    align-items center

  .sidebar-sub-headers

    a.sidebar-link
      border-left 1px solid $borderColor
    a.sidebar-link.active
      color $accentColor
      border-left 1px solid $accentColor
      border-right none
      background-color #fff

  a.sidebar-link
    border-right 0.12rem solid transparent
    border-left 0
    &.active
      font-weight 600
      color $accentColor
      border-color $accentColor
      background-color #e6f7ff


@media (min-width: 719px)
  .page
    padding-right 11rem

  .sidebar-sub-headers
    font-size 15px
    background-color #fff
    width 11rem
    position fixed
    z-index 10
    margin 0
    top $navbarHeight + 1.5rem
    right 0
    bottom 0
    box-sizing border-box

    overflow-y auto
    padding-left 0
@media (max-width: 719px)
  .theme-container .page
    padding-right 0
// sidebar 拆分成左右结构 - end

.page-edit, .page-nav,
.content:not(.custom) {
  max-width: 920px;
}

// 字体
body {
  font-family: PingFang SC,Helvetica Neue,Arial,sans-serif;
}
h1, h2, h3, h4, h5 {
  font-weight: 400;
  color: rgb(31, 47, 61);
  border: none;
}
h1
  font-size 1.9rem

h2
  font-size 1.5rem
  padding-bottom: 1rem

h3
  font-size 1.2rem

* {
  box-sizing: border-box;
}
table {
  width 100%
  display table
  text-align center
}

// 文档代码块样式优化
.content .demo-block pre {
  margin: 0;
  border-radius: 0;
}
